<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cover_photo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/placeholder"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_topic_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1167fa"
        android:layout_gravity="left"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        android:text="HISTORY"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="6dp"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Complete course on Modern Indian History for UPSC CSE"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_starts_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Starts on March 12, 9:00 AM" />

        <TextView
            android:id="@+id/tv_bullet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/bullet"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tv_lessons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="37 lessons"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        android:text="Abhishek Srivastava" />
</LinearLayout>